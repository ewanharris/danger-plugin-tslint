{
  "name": "@awam/danger-plugin-tslint",
  "version": "1.1.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "tslint -p tsconfig.json --format stylish",
    "prepare": "npm run compile",
    "test": "jest",
    "watch": "tsc -watch -p ./"
  },
  "keywords": [
    "danger-plugin",
    "tslint"
  ],
  "author": "Ewan Harris <ewanharris93@gmail.com>",
  "repository": {
    "url": "https://github.com/ewanharris/danger-plugin-tslint"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "peerDependencies": {
    "tslint": "*"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx|js|json)": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ]
  },
  "dependencies": {
    "@types/node": "^11.13.22",
    "danger": "^11.2.0"
  }
}
